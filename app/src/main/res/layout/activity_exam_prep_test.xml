<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:weightSum="3"
    tools:context="com.example.appcenter.companion.identify.IdentifyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/exam_prep_acitivity_radio_group_margin"
        android:layout_weight="0.6">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/examprep_logo" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ifsta_text_logo"/>
            <TextView
                android:id="@+id/current_question_Number"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:text="Question 5 of 404"
                android:gravity="bottom"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@android:color/white"
        >
        <TextView
            android:id="@+id/question_view"
            android:text = "THIS IS the question area?"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparentBlack"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/page_number_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/background_light"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:text="Q:174" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="end"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/add_to_study_deck"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:visibility="invisible"
            android:src="@drawable/bitmap_add_to_study_deck_unchecked" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:weightSum="4"
        android:orientation="vertical"
        >
        <RadioGroup
            android:id="@+id/exam_prep_test_radio_group"
            android:layout_weight="4"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RadioButton
                android:id="@+id/option_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@drawable/square_checkbox_selector"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@android:color/background_light"
                android:layout_marginBottom="@dimen/exam_prep_acitivity_radio_group_margin"/>
            <RadioButton
                android:id="@+id/option_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@drawable/square_checkbox_selector"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@android:color/background_light"
                android:layout_marginBottom="@dimen/exam_prep_acitivity_radio_group_margin"/>
            <RadioButton
                android:id="@+id/option_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@drawable/square_checkbox_selector"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@android:color/background_light"
                android:layout_marginBottom="@dimen/exam_prep_acitivity_radio_group_margin"/>
            <RadioButton
                android:id="@+id/option_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@drawable/square_checkbox_selector"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@android:color/background_light"
                android:layout_marginBottom="@dimen/exam_prep_acitivity_radio_group_margin"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
