<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:weightSum="2"
    tools:context="com.example.appcenter.companion.identify.IdentifyActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_horizontal_margin">
        <ImageView
            android:id="@+id/container_image"
            android:src="@drawable/identify_002"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/transparentBlack"
            android:orientation="horizontal"
            android:weightSum="4"
            >
            <TextView
                android:id="@+id/imageReferences"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@android:color/background_light"
                android:maxLines="1"
                 />
            <TextView
                android:id="@+id/questionNumber"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/background_light"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:text="Q:174" />
        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="vertical"
        >
        <RadioGroup
            android:id="@+id/container_radio_group"
            android:layout_weight="3.5"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RadioButton
                android:id="@+id/option_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:button="@color/exomedia_leanback_progress_horizontal_background"
                android:paddingStart="16dp"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/option_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:button="@color/exomedia_leanback_progress_horizontal_background"
                android:paddingStart="16dp"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/option_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:button="@drawable/exomedia_leanback_progress_horizontal"
                android:paddingStart="16dp"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/option_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:button="@drawable/exomedia_leanback_progress_horizontal"
                android:paddingStart="16dp"
                android:textSize="18sp" />
        </RadioGroup>
        <Button
            android:id="@+id/skip"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="@string/skip"
            android:background="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
    </LinearLayout>
</LinearLayout>
