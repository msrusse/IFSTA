<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrong_questions_review_listview_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/exam_prep_acitivity_radio_group_margin"
    android:background="@color/lightWhite"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/question_number"
        android:paddingTop="@dimen/exam_prep_acitivity_radio_group_margin"
        android:layout_width="match_parent"
        android:textColor="@android:color/black"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/question"
        android:paddingTop="@dimen/exam_prep_acitivity_radio_group_margin"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="@string/identify_delete_preferences_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/correct_answer"
        android:paddingTop="@dimen/exam_prep_acitivity_radio_group_margin"
        android:textColor="@color/lightGreen"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/identify_delete_preferences_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wrong_answer"
        android:paddingTop="@dimen/exam_prep_acitivity_radio_group_margin"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:text="@string/identify_delete_preferences_description"
        android:textColor="@color/lightRed"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>