<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:weightSum="3"
    tools:context="com.example.appcenter.companion.examprep.ExamPrepScoreReview">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="3"
        android:padding="@dimen/exam_prep_acitivity_radio_group_margin"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/exam_prep_acitivity_radio_group_margin"
            android:background="@android:color/holo_red_dark"
            android:weightSum="4">
            <TextView
                android:id="@+id/wrong_answers_text_view"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:scaleY="2"
                android:scaleX="2"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="100"
                android:layout_height="0dp" />
            <TextView
                android:layout_width="match_parent"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="@string/wrong_title"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/exam_prep_acitivity_radio_group_margin"
            android:background="@android:color/holo_orange_dark"
            android:weightSum="4">
            <TextView
                android:id="@+id/correct_answers_text_view"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:scaleY="2"
                android:scaleX="2"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="100"
                android:layout_height="0dp" />
            <TextView
                android:layout_width="match_parent"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="@string/right_title"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/exam_prep_acitivity_radio_group_margin"
            android:background="@color/colorPrimary"
            android:weightSum="4">
            <TextView
                android:id="@+id/score_text_view"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:scaleY="2"
                android:scaleX="2"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="100"
                android:layout_height="0dp" />
            <TextView
                android:layout_width="match_parent"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="@string/score_title"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/wrong_questions_review_listview"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:dividerHeight="@dimen/activity_list_view_divider"
        android:padding="@dimen/exam_prep_acitivity_radio_group_margin"
        android:layout_height="0dp" />

</LinearLayout>
