<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.05"
        android:padding="@dimen/exam_prep_acitivity_radio_group_margin"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.example.appcenter.companion.courses.EqualWidthHeightTextView
            android:id="@+id/chapter_progress_percentage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="2.95"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/exam_prep_acitivity_radio_group_margin"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/chapter_number"
            android:text="Chapter5_1_1"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/chapter_title"
            android:text="Chapter5_1_1"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/page_count"
            android:text="Chapter5_1_1"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>