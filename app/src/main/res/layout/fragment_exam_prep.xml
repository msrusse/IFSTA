<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:weightSum="2"
    android:orientation="vertical"
    tools:context="com.example.appcenter.companion.examprep.ExamPrepFragment"
    >

   <ImageView
       android:src="@drawable/examprep_logo"
       android:layout_gravity="start"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.8"/>
    <ListView
        android:id="@+id/exam_prep_list_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_centerHorizontal="true"
        android:divider="@android:color/transparent"
        android:stackFromBottom="true"
        android:dividerHeight="@dimen/activity_list_view_divider"
        android:layout_marginTop="@dimen/activity_list_view_divider"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

</LinearLayout>
